@model List<MedicationManager.Models.Medication>

<h1>Your Medications</h1>

<h3><a asp-controller="Medication" asp-action="Add">Add a New Medication</a></h3>

<table class="table">

    <tr>
        <th>Medication</th>
        <th>Dosage</th>
        <th># of Times Taken Each Day</th>
        <th>Time of Day Taken</th>
        <th>Total in Fill</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Dosage</td>
            <td>@item.TimesXDay</td>
            <td>@item.TimeOfDay</td>
            <td>@item.RefillRate</td>
            <td><a asp-controller="Medication" asp-action="Edit" asp-route-id="@item.MedID">Edit Medication</a></td>
            <td><a asp-controller="Medication" asp-action="Remove" asp-route-id="@item.MedID">Remove Medication</a></td>
        </tr>
    }

</table>

@if (Model.Count == 0)
{
    <p>There are no medications available for this user.</p>

}


<a asp-controller="User" asp-action="Logout">Logout</a>